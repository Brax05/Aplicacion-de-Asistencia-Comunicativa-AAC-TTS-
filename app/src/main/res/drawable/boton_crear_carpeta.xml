<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D32F2F"
                android:endColor="#C62828"
                android:angle="270" />
            <corners android:radius="18dp" />
            <stroke android:width="2dp" android:color="#B71C1C" />
        </shape>
    </item>
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF7096"
                android:endColor="#E452CA"
                android:angle="270" />
            <corners android:radius="18dp" />
            <stroke android:width="2dp" android:color="#B71C1C" />
        </shape>
    </item>
</selector>

