<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    tools:context=".MainActivity2">

  <!-- Titulo de la app centrado -->
  <TextView
      android:id="@+id/appTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Namisok"
      android:textSize="60sp"
      android:textStyle="bold"
      android:layout_marginTop="64dp"
      android:textColor="#FFFFFF"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

  <!-- Botón para conversación extensa -->
  <Button
      android:id="@+id/txtLargo"
      android:layout_width="0dp"
      android:layout_height="70dp"
      android:layout_marginTop="48dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="40dp"
      android:text="Conversacion extensa"
      android:background="@drawable/custom_button_background"
      android:textColor="#ffffff"
      android:textSize="19sp"
      app:layout_constraintTop_toBottomOf="@id/appTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>


  <!-- Botón para gestor de botones -->
  <Button
      android:id="@+id/txtCorto"
      android:layout_width="0dp"
      android:layout_height="70dp"
      android:layout_marginTop="36dp"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="40dp"
      android:text="Gestor de botones"
      android:background="@drawable/custom_button_background"
      android:textColor="#ffffff"
      android:textSize="19sp"
      app:layout_constraintTop_toBottomOf="@id/txtLargo"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
